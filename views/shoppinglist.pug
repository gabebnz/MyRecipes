extends layout

block content
 
  head
    link(rel='stylesheet', href='/stylesheets/recipe-style.css')
  include header.pug

  body 
    h1= title
    p Welcome to the site: #{title}
    form(role='form' action="/addshoppinglistitem" method="post" )
      label(for='Item') Item:
      input(type="text" name="Item" placeholder="e.g. 1kg Flour")
      label(for='Quantity') Quantity:
      input(type="number" name="Quantity" placeholder="e.g. 2")
      input(value="Submit" type="submit")

    body