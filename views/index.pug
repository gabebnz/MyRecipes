extends layout

block content
  include header.pug

  head
    style.
      
      @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap');
      
      #body-wrapper {
          width: 1500px;
          margin: 0 auto;
      }

      nav ul {
          padding: 5px;
          display: flex;
          justify-content: space-between;
          list-style-type: none;
      }

      nav li a {
          color: black;
          font-size: 18px;
          text-decoration: none;
      }

      nav li a:hover {
          color: #737373;
          text-decoration: none;
      }

      body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
      }

      .container {
        background-color: #f2f2f2;
        height: 1480px;
      }

      hr.style {
          border: 0;
          height: 1px;
        width: 100%;
        margin: auto;
          background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
      }

      h1.header {
        font-size:36px;
        color: #808080;
      }

      h1.slider {
        font-size:36px;
        color: #ffffff;
      }

      p.paragraph {
        height: 250px;
        font-size: 20px;
        color: #737373;
      }

      p.slider1 {
        font-size: 20px;
        color: #ffffff;
      }

      p.slider2 {
        font-size: 16px;
        color: #ffffff;
      }

      * {box-sizing:border-box}

      .slideshow-container {
        position: relative;
        margin: auto;
        padding-top: 10px;
        padding-bottom: 50px;
      }

      .mySlides {
        display: none;
      }

      .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        margin-top: -22px;
        padding: 16px;
        color: rgb(255, 255, 255);
        font-weight: bold;
        font-size: 30px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
        user-select: none;
      }

      .next {
        right: 0;
        border-radius: 3px 0 0 3px;
      }

      .prev:hover, .next:hover {
        background-color: rgba(0,0,0,0.8);
      }

      .text {
        color: white;
        font-size: 15px;
        padding: 8px 12px;
        position: absolute;
        bottom: 8px;
        width: 100%;
        text-align: center;
      }

      .textover {
        color: white;
        letter-spacing: 1px;
        padding-top: 100px;
        padding-left: 200px;
        position: absolute;
        top: 0;
        max-width: 1500px;
      }

      .active, .dot:hover {
        background-color: #717171;
      }

      .fade {
        -webkit-animation-name: fade;
        -webkit-animation-duration: 1.5s;
        animation-name: fade;
        animation-duration: 1.5s;
      }

      @-webkit-keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
      }

      @keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
      }

