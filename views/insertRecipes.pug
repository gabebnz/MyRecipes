extends layout

block content
  include header.pug
  head
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')
    style.
        input[type=submit] {
        margin-top : 25px;
        margin: -20px -50px; 
        position:relative;
        top:50%; 
        left:50%;
        outline:none;
        height: 40px;
        text-align: center;
        width: 130px;
        border-radius:40px;
        background: #fff;
        border: 2px solid $green;
        color:$green;
        letter-spacing:1px;
        text-shadow:0;
        font:{
            size:12px;
            weight:bold;
        }
        cursor: pointer;
        transition: all 0.25s ease;
        &:hover {
            color:white;
            background: $green;
        }
        &:active {
            letter-spacing: 2px ;
        }
        &:after {
            content:"SUBMIT";
        }
        }
  body 
    // You can see the use of a variable below with the title
    // This is inherited from /routes/index.js where you can pass these in
    .modal-dialog
        .modal-content
          // Modal Header
          .modal-header
            h4#myModalLabel.modal-title
              | Insert Recipes
          // Modal Body
          .modal-body
            form(role='form' method='post' action='/addrecipe')
              div.form-group
                label(for='Title') Title:
                input#name.form-control(type='text', placeholder='Title' name='Title')
              div.form-group
                label(for='Description') Description:
                input#email.form-control(type='text', placeholder='Description' name='Description')
              div.form-group
                label(for='Ingredients') Ingredients:
                input#email.form-control(type='text', placeholder='Ingredients' name='Ingredients')
              div.form-group
                label(for='Method') Method:
                input#email.form-control(type='text', placeholder='Method' name='Method')  
              div.form-group
                label(for='URL') URL:
                input#email.form-control(type='text', placeholder='URL' name='URL')
              div.form-group
                label(for='Comments') Comments:
                input#email.form-control(type='text', placeholder='Comments' name='Comments')
              div.form-group
                label(for='Label1') Label 1:
                input#email.form-control(type='text', placeholder='Label 1' name='Label1')
              div.form-group
                label(for='Label2') Label 2:
                input#email.form-control(type='text', placeholder='Label 2' name='Label2')
              div.form-group
                label(for='Label3') Label 3:
                input#email.form-control(type='text', placeholder='Label 3' name='Label3')
                br
                            //-   button.btn.btn-primary(type="submit", name="asdf") Submit
                            //-   button.btn.btn-default(type="button", data-dismiss="modal")                                
                input(value='Submit', type='submit')